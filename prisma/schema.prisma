generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
}

model user {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  first_name String
  last_name String
  email String @unique
  created_at DateTime @db.Timestamptz(6)
  updated_at DateTime @db.Timestamptz(6)
}

model store {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name String
  created_at DateTime @db.Timestamptz(6)
  updated_at DateTime @db.Timestamptz(6)
}
